<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>ProjAste-RIA</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/tiw_proj?serverTimezone=Europe/Rome</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>gioeleTest</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>G10ele_Test</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <filter>
  	<filter-name>LoginChecker</filter-name>
  	<filter-class>filters.LoginChecker</filter-class>
  </filter>
  <filter-mapping>
    	<filter-name>LoginChecker</filter-name>
    	<url-pattern>/CloseAuction</url-pattern>
    	<url-pattern>/CreateAuction</url-pattern>
    	<url-pattern>/GetAuctionBids</url-pattern>
    	<url-pattern>/GetAuctionInfo</url-pattern>
    	<url-pattern>/GetAuctionWinner</url-pattern>
    	<url-pattern>/GetClosedAuctions</url-pattern>
    	<url-pattern>/GetOpenAuctions</url-pattern>
    	<url-pattern>/GetWonAuctions</url-pattern>
    	<url-pattern>/MakeBid</url-pattern>
    	<url-pattern>/SearchAuctions</url-pattern>
  </filter-mapping>
   <filter>
  	<filter-name>NoCacher</filter-name>
  	<filter-class>filters.NoCacher</filter-class>
  </filter>
  <filter-mapping>
    	<filter-name>NoCacher</filter-name>
    	<url-pattern>/AsteProjHome.html</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>